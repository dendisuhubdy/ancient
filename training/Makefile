SHELL := /bin/bash

# Targets
TARGETS = .conda .channels .tensorflow
PBASE=$(shell pwd)

all:  	$(TARGETS)

.conda:
	wget 'https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh' && bash Miniconda3-latest-Linux-x86_64.sh -b -p ${PBASE}/bin && rm -f Miniconda3-latest-Linux-x86_64.sh && touch .conda

.channels: .conda
	export PATH=${PBASE}/bin/bin:${PATH} && conda config --add channels defaults && conda config --add channels conda-forge && conda config --add channels bioconda && touch .channels

.tensorflow: .conda .channels
	export PATH=${PBASE}/bin/bin:${PATH} && pip install -r requirements.txt && touch .tensorflow

ancestry: .tensorflow
	export PATH=${PBASE}/bin/bin:${PATH} && python ancestry.py --help

list: .tensorflow
	export PATH=${PBASE}/bin/bin:${PATH} && pip list

clean:
	rm -rf *.png *.tsv ancestry.pyc ancestry.h5 tfjsmodel/

distclean:
	rm -rf $(TARGETS) $(TARGETS:=.o) bin/

.PHONY: distclean clean all
